<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
                name="product"
                type="io.gameper.gampingmall.entity.Product"
                />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/stageItemPresentSent"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:layout_marginBottom="8dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/textViewItemPresentFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="to: 01012345678"
                android:layout_marginTop="6dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <View
                android:id="@+id/dividerFriend"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="#555555"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toBottomOf="@+id/textViewItemPresentFriend"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <ImageView
                android:id="@+id/imageViewItemPresentSent"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:imageFromUrl="@{product.imageUrl}"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dividerFriend"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="centerCrop"/>

        <View
                android:id="@+id/dividerImage"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="#555555"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toBottomOf="@+id/imageViewItemPresentSent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:id="@+id/textViewItemPresentSentBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{product.brandName}"
                android:textSize="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toBottomOf="@+id/dividerImage"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/textViewItemPresentReceivedProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="@{product.productName}"
                android:textSize="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toBottomOf="@+id/textViewItemPresentSentBrand"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/textViewItemPresentSentExpiredDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorRed"
                android:text="@{String.valueOf(product.expiredAt)}"
                android:textSize="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="20dp"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toBottomOf="@+id/textViewItemPresentReceivedProductName"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>